<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:PresentationTier.ViewModels"
        x:Class="PresentationTier.Views.MainWindow"
        Title="MainWindow">
	<Grid>
		<StackPanel>
			<!-- Buttons to navigate between views -->
			<Button Content="Show LoginView" Command="{Binding NavigateToLoginCommand}" />
			<Button Content="Show RegistrationView" Command="{Binding NavigateToRegistrationCommand}" />
			<Button Content="Show SimplePage" Command="{Binding NavigateToSimplePageCommand}" />

			<!-- Placeholder for the current view -->
			<ContentControl Content="{Binding CurrentView}" />
		</StackPanel>
	</Grid>
</Window>
