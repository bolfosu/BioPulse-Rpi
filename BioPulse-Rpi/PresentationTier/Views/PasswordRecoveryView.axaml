<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="PresentationTier.Views.PasswordRecoveryView">
	<StackPanel Margin="20">
		<TextBlock Text="Password Recovery" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" />

		<!-- Email Input -->
		<TextBox Watermark="Enter your email" Text="{Binding Email}" Margin="0,5" />

		<!-- Security Question Dropdown -->
		<ComboBox Items="{Binding SecurityQuestions}" SelectedItem="{Binding SelectedSecurityQuestion}" Margin="0,5" />

		<!-- Security Answer Input -->
		<TextBox Watermark="Enter your answer" Text="{Binding SecurityAnswer}" Margin="0,5" />

		<!-- New Password Input -->
		<TextBox Watermark="Enter your new password" Text="{Binding NewPassword}" Margin="0,10" />

		<!-- Reset Password Button -->
		<Button Content="Reset Password" Command="{Binding ResetPasswordCommand}" Margin="0,10" />

		<!-- Error or Success Message -->
		<TextBlock Text="{Binding Message}" Foreground="{Binding MessageForeground}" Margin="0,10" />
	</StackPanel>
</UserControl>
