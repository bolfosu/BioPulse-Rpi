<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:PresentationTier.ViewModels"
             x:Class="PresentationTier.Views.DeviceSettingsView">
	<Grid RowDefinitions="Auto,*,Auto">
		<!-- Scan Button -->
		<Button Content="Scan for Devices" Command="{Binding ScanCommand}" Margin="10" Grid.Row="0" />

		<!-- ListBox for scanned devices -->
		<ListBox ItemsSource="{Binding ScannedDevices}"
                 SelectedItem="{Binding SelectedDevice}"
                 Margin="10"
                 Grid.Row="1">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Name}" />
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>

		<!-- Connect Button -->
		<Button Content="Connect to Device"
                Command="{Binding ConnectCommand}"
                Margin="10"
                Grid.Row="2"
                IsEnabled="{Binding SelectedDevice}" />
	</Grid>
</UserControl>
